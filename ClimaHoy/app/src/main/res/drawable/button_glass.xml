<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:bottom="2dp">
        <selector>
            <!-- PRESSED -->
            <item android:state_pressed="true">
                <shape android:shape="rectangle">
                    <solid android:color="@color/glass_white_pressed"/>
                    <stroke
                        android:width="1dp"
                        android:color="@color/glass_border"/>
                    <corners
                        android:radius="8dp"/>
                </shape>
            </item>

            <!-- NORMAL -->
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@color/glass_white"/>

                    <stroke
                        android:width="1dp"
                        android:color="@color/glass_border"/>

                    <corners
                        android:radius="8dp"/>
                </shape>
            </item>

        </selector>
    </item>

</layer-list>
